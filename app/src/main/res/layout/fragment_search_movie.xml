<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.SearchMovieFragment"
    android:background="@color/black_200">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewFindMovie"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:lineSpacingExtra="5dp"
        android:paddingStart="5dp"
        android:text="What movie do you want to find ?"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBackButtonSearchMovies"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewBackButtonSearchMovies"
        app:layout_constraintTop_toTopOf="@+id/imageViewBackButtonSearchMovies" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextSearchMovie"
        android:layout_width="355dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_search_view"
        android:drawableStart="@drawable/resize_search_icon"
        android:drawablePadding="17dp"
        android:ems="10"
        android:hint="Find movies..."
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingStart="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFindMovie"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewResultsMovie"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="9dp"
        android:paddingTop="10dp"
        android:paddingRight="9dp"
        android:paddingBottom="10dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextSearchMovie"
        app:layout_constraintStart_toStartOf="@+id/editTextSearchMovie"
        app:layout_constraintTop_toBottomOf="@+id/editTextSearchMovie"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewBackButtonSearchMovies"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_back_press_button"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/press_back_icon" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewButtonChangePage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/custom_back_press_button"
        android:padding="10dp"
        android:scaleX="-1"

        android:scaleY="-1"
        app:layout_constraintBottom_toBottomOf="@+id/textViewFindMovie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textViewFindMovie"
        app:layout_constraintTop_toTopOf="@+id/textViewFindMovie"
        app:srcCompat="@drawable/press_back_icon" />
    <ProgressBar
        android:id="@+id/progressBarLoadingSearchMovies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/gradient_progress"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewResultsMovie"
        app:layout_constraintEnd_toEndOf="@+id/recyclerViewResultsMovie"
        app:layout_constraintStart_toStartOf="@+id/recyclerViewResultsMovie"
        app:layout_constraintTop_toTopOf="@+id/recyclerViewResultsMovie" />

</androidx.constraintlayout.widget.ConstraintLayout>