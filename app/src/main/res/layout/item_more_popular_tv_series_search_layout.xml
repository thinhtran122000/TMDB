<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black_200"
    android:layout_margin="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewPosterMPTSS"
        android:layout_width="165dp"
        android:layout_height="230dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/poster" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTitleMPTSS"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Title More Popular Tv Series"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:paddingStart="2dp"
        android:lineHeight="19dp"
        android:letterSpacing="0.02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewPosterMPTSS"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewPosterMPTSS"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPosterMPTSS" />
</androidx.constraintlayout.widget.ConstraintLayout>